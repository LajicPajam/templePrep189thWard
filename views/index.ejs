<!DOCTYPE html>
<html>
<head>
  <title>Roommate Quote Wall</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background-color: #f8f9fa;
    }
    .quote-card {
      border-radius: 12px;
      padding: 20px;
      background: white;
      box-shadow: 0 2px 8px rgba(0,0,0,0.06);
      margin-bottom: 20px;
    }
    .quote-text {
      font-size: 1.2rem;
      font-style: italic;
    }
    .quote-name {
      color: #6c757d;
    }
  </style>
</head>

<body>
  <div class="container py-4" style="max-width: 750px;">

    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="fw-bold">The Edgy Campers Quote Wall</h1>
      <div class="text-end">
        <small class="text-muted">
          Logged in as <strong><%= user.username %></strong> (<%= user.role %>)
        </small><br>
        <a href="/logout" class="text-danger" style="font-size: 0.9rem;">Logout</a>
      </div>
    </div>

    <!-- Add Quote Form -->
    <div class="card p-4 mb-4 shadow-sm">
    <form action="/add" method="POST" id="quoteForm">
        
        <div id="quoteLines">
        <div class="quote-line mb-3 d-flex gap-2">
            <input type="text" name="names[]" class="form-control" placeholder="Who said it?" required>
            <input type="text" name="quotes[]" class="form-control" placeholder="Enter a line..." required>
        </div>
        </div>

        <button type="button" class="btn btn-secondary mb-3" id="addLineBtn">+ Add Line</button>
        <button type="submit" class="btn btn-primary w-100">Add Quote</button>
    </form>
    </div>

    <script>
    const addLineBtn = document.getElementById('addLineBtn');
    const quoteLines = document.getElementById('quoteLines');

    addLineBtn.addEventListener('click', () => {
        const lineDiv = document.createElement('div');
        lineDiv.classList.add('quote-line', 'mb-3', 'd-flex', 'gap-2');

        lineDiv.innerHTML = `
        <input type="text" name="names[]" class="form-control" placeholder="Who said it?" required>
        <input type="text" name="quotes[]" class="form-control" placeholder="Enter a line..." required>
        <button type="button" class="btn btn-danger btn-sm removeLineBtn">âœ•</button>
        `;

        quoteLines.appendChild(lineDiv);

        // Attach remove functionality
        lineDiv.querySelector('.removeLineBtn').addEventListener('click', () => {
        lineDiv.remove();
        });
    });
    </script>


    <% if (quotes.length === 0) { %>
      <p class="text-center text-muted">No quotes yet. Add one!</p>
    <% } %>

        <!-- Quote List -->
    <% quotes.forEach(q => { %>
    <div class="quote-card">
        <% 
        const lines = q.quote.split('\n'); 
        %>

        <% lines.forEach(line => { %>
        <% if(line.trim() !== '') { 
            const parts = line.split(':'); 
            const speaker = parts[0];
            const text = parts.slice(1).join(':').trim(); // in case the line has colons
        %>
            <div class="quote-text">
            <strong><%= speaker %>:</strong> "<%= text %>"
            </div>
        <% } %>
        <% }) %>

        <% if (user.role === "admin") { %>
        <form action="/delete/<%= q.id %>" method="POST" class="mt-3 text-end">
            <button class="btn btn-danger btn-sm">Delete</button>
        </form>
        <% } %>
    </div>
    <% }) %>



  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
