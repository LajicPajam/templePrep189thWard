<!DOCTYPE html>
<html>
<head>
  <title>The Edgy Campers Quote Wall</title>
  
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background-color: #f8f9fa;
    }
    .quote-card {
      border-radius: 12px;
      padding: 20px;
      background: white;
      box-shadow: 0 2px 8px rgba(0,0,0,0.06);
      margin-bottom: 20px;
    }
    .quote-text {
      font-size: 1.2rem;
      font-style: italic;
      word-wrap: break-word;
    }
    .quote-name {
      color: #6c757d;
    }
    
    @media (max-width: 768px) {
      h1 {
        font-size: 1.5rem !important;
      }
      .quote-text {
        font-size: 1rem;
      }
      .header-section {
        flex-direction: column !important;
        align-items: flex-start !important;
        gap: 1rem;
      }
    }
  </style>
</head>

<body>
  <div class="container py-4" style="max-width: 750px;">

    <div class="d-flex justify-content-between align-items-center mb-4 header-section">
      <h1 class="fw-bold">The Edgy Campers Quote Wall</h1>
      <div class="text-end">
        <small class="text-muted">
          Logged in as <strong><%= user.username %></strong> (<%= user.role %>)
        </small><br>
        <a href="/logout" class="text-danger" style="font-size: 0.9rem;">Logout</a>
      </div>
    </div>

    <!-- Add Quote Button -->
    <div class="mb-4">
      <a href="/add" class="btn btn-success w-100 btn-lg">+ Add New Quote</a>
    </div>

    <!-- Search Form -->
    <div class="card p-3 mb-4 shadow-sm">
      <form action="/" method="GET" class="d-flex gap-2">
        <input 
          type="text" 
          name="search" 
          class="form-control" 
          placeholder="Search by name..." 
          value="<%= searchName %>"
        >
        <button type="submit" class="btn btn-primary">Search</button>
        <% if (searchName) { %>
          <a href="/" class="btn btn-secondary">Clear</a>
        <% } %>
      </form>
      <% if (searchName) { %>
        <small class="text-muted mt-2">
          Showing results for: <strong>"<%= searchName %>"</strong>
        </small>
      <% } %>
    </div>

    <% if (quotes.length === 0) { %>
      <% if (searchName) { %>
        <p class="text-center text-muted">No quotes found for "<%= searchName %>". <a href="/">View all quotes</a></p>
      <% } else { %>
        <p class="text-center text-muted">No quotes yet. Add one!</p>
      <% } %>
    <% } %>

    <!-- Quote List -->
    <% quotes.forEach(q => { %>
    <div class="quote-card">
        <% 
        const lines = q.quote.split('\n'); 
        const date = new Date(q.created_at);
        const formattedDate = date.toLocaleDateString('en-US', { 
          year: 'numeric', 
          month: 'short', 
          day: 'numeric' 
        });
        %>

        <% lines.forEach(line => { %>
        <% if(line.trim() !== '') { 
            const parts = line.split(':'); 
            const speaker = parts[0];
            const text = parts.slice(1).join(':').trim();
        %>
            <div class="quote-text">
            <strong><%= speaker %>:</strong> "<%= text %>"
            </div>
        <% } %>
        <% }) %>

        <div class="d-flex justify-content-between align-items-center mt-3">
          <small class="text-muted" style="font-style: italic; font-size: 0.85rem;">
              <%= formattedDate %>
          </small>
          
          <% if (user.role === "admin") { %>
          <form action="/delete/<%= q.id %>" method="POST" class="m-0">
              <button class="btn btn-danger btn-sm">Delete</button>
          </form>
          <% } %>
        </div>
    </div>
    <% }) %>

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
