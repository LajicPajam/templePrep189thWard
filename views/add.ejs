<!DOCTYPE html>
<html>
<head>
  <title>Add Quote - The Edgy Campers</title>
  
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background-color: #f8f9fa;
    }
    .quote-card {
      border-radius: 12px;
      padding: 20px;
      background: white;
      box-shadow: 0 2px 8px rgba(0,0,0,0.06);
      margin-bottom: 20px;
    }
    .quote-text {
      font-size: 1.2rem;
      font-style: italic;
      word-wrap: break-word;
    }
    
    @media (max-width: 768px) {
      h1 {
        font-size: 1.5rem !important;
      }
      .quote-line {
        flex-direction: column !important;
      }
      .quote-line input {
        width: 100% !important;
      }
    }
  </style>
</head>

<body>
  <div class="container py-4" style="max-width: 750px;">

    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="fw-bold">Add New Quote</h1>
      <div class="text-end">
        <small class="text-muted">
          Logged in as <strong><%= user.username %></strong> (<%= user.role %>)
        </small><br>
        <a href="/" class="btn btn-sm btn-outline-primary mt-1">← Back to Quotes</a>
      </div>
    </div>

    <!-- Success Message -->
    <% if (success && lastQuote) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <strong>Success!</strong> Your quote has been added.
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>

    <!-- Show the last added quote -->
    <div class="quote-card mb-4">
      <h5 class="mb-3">Your latest quote:</h5>
      <% 
      const lines = lastQuote.quote.split('\n'); 
      const date = new Date(lastQuote.created_at);
      const formattedDate = date.toLocaleDateString('en-US', { 
        year: 'numeric', 
        month: 'short', 
        day: 'numeric' 
      });
      %>

      <% lines.forEach(line => { %>
      <% if(line.trim() !== '') { 
          const parts = line.split(':'); 
          const speaker = parts[0];
          const text = parts.slice(1).join(':').trim();
      %>
          <div class="quote-text">
          <strong><%= speaker %>:</strong> "<%= text %>"
          </div>
      <% } %>
      <% }) %>

      <div class="mt-3">
        <small class="text-muted" style="font-style: italic; font-size: 0.85rem;">
          <%= formattedDate %>
        </small>
      </div>
    </div>
    <% } %>

    <!-- Add Quote Form -->
    <div class="card p-4 shadow-sm">
      <h5 class="mb-3">Add Another Quote</h5>
      <form action="/add" method="POST" id="quoteForm">
        
        <div id="quoteLines">
          <div class="quote-line mb-3 d-flex flex-column flex-md-row gap-2">
            <input type="text" name="names[]" class="form-control" placeholder="Who said it?" required>
            <input type="text" name="quotes[]" class="form-control" placeholder="Enter a line..." required>
          </div>
        </div>

        <button type="button" class="btn btn-secondary mb-3" id="addLineBtn">+ Add Line</button>
        <button type="submit" class="btn btn-success w-100">Submit Quote</button>
      </form>
    </div>

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  
  <script>
    const addLineBtn = document.getElementById('addLineBtn');
    const quoteLines = document.getElementById('quoteLines');

    addLineBtn.addEventListener('click', () => {
        const lineDiv = document.createElement('div');
        lineDiv.classList.add('quote-line', 'mb-3', 'd-flex', 'flex-column', 'flex-md-row', 'gap-2');

        lineDiv.innerHTML = `
        <input type="text" name="names[]" class="form-control" placeholder="Who said it?" required>
        <input type="text" name="quotes[]" class="form-control" placeholder="Enter a line..." required>
        <button type="button" class="btn btn-danger btn-sm removeLineBtn">✕</button>
        `;

        quoteLines.appendChild(lineDiv);

        lineDiv.querySelector('.removeLineBtn').addEventListener('click', () => {
          lineDiv.remove();
        });
    });
  </script>
</body>
</html>
