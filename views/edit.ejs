<!DOCTYPE html>
<html>
<head>
  <title>Edit Quote - The Edgy Campers</title>
  
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background-color: #f8f9fa;
    }
    .quote-card {
      border-radius: 12px;
      padding: 20px;
      background: white;
      box-shadow: 0 2px 8px rgba(0,0,0,0.06);
      margin-bottom: 20px;
    }
    
    @media (max-width: 768px) {
      h1 {
        font-size: 1.5rem !important;
      }
      .quote-line {
        flex-direction: column !important;
      }
      .quote-line input {
        width: 100% !important;
      }
    }
  </style>
</head>

<body>
  <div class="container py-4" style="max-width: 750px;">

    <div class="d-flex justify-content-between align-items-center mb-4 header-section">
      <h1 class="fw-bold">Edit Quote</h1>
      <div class="text-end">
        <small class="text-muted">
          Logged in as <strong><%= user.username %></strong> (<%= user.role %>)
        </small><br>
        <div class="d-flex gap-2 justify-content-end mt-1">
          <a href="/" class="btn btn-sm btn-outline-primary">← Back to Quotes</a>
          <% if (user.role === "admin") { %>
            <a href="/users" class="text-primary" style="font-size: 0.9rem;">|</a>
            <a href="/users" class="text-primary" style="font-size: 0.9rem;">Users</a>
          <% } %>
          <a href="/logout" class="text-danger" style="font-size: 0.9rem;">Logout</a>
        </div>
      </div>
    </div>

    <!-- Edit Quote Form -->
    <div class="card p-4 shadow-sm">
      <h5 class="mb-3">Edit Quote Lines</h5>
      <form action="/edit/<%= quote.id %>" method="POST" id="quoteForm">
        
        <div id="quoteLines">
          <% lines.forEach((line, index) => { %>
          <div class="quote-line mb-3 d-flex flex-column flex-md-row gap-2">
            <input type="text" name="names[]" class="form-control" placeholder="Who said it?" value="<%= line.name %>" required>
            <input type="text" name="quotes[]" class="form-control" placeholder="Enter a line..." value="<%= line.text %>" required>
            <% if (index > 0) { %>
              <button type="button" class="btn btn-danger btn-sm removeLineBtn">✕</button>
            <% } %>
          </div>
          <% }) %>
        </div>

        <button type="button" class="btn btn-secondary mb-3" id="addLineBtn">+ Add Line</button>
        
        <div class="d-flex gap-2">
          <a href="/" class="btn btn-outline-secondary w-50">Cancel</a>
          <button type="submit" class="btn btn-warning w-50">Update Quote</button>
        </div>
      </form>
    </div>

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  
  <script>
    const addLineBtn = document.getElementById('addLineBtn');
    const quoteLines = document.getElementById('quoteLines');

    // Add new line
    addLineBtn.addEventListener('click', () => {
        const lineDiv = document.createElement('div');
        lineDiv.classList.add('quote-line', 'mb-3', 'd-flex', 'flex-column', 'flex-md-row', 'gap-2');

        lineDiv.innerHTML = `
        <input type="text" name="names[]" class="form-control" placeholder="Who said it?" required>
        <input type="text" name="quotes[]" class="form-control" placeholder="Enter a line..." required>
        <button type="button" class="btn btn-danger btn-sm removeLineBtn">✕</button>
        `;

        quoteLines.appendChild(lineDiv);

        lineDiv.querySelector('.removeLineBtn').addEventListener('click', () => {
          lineDiv.remove();
        });
    });

    // Attach remove functionality to existing lines
    document.querySelectorAll('.removeLineBtn').forEach(btn => {
      btn.addEventListener('click', () => {
        btn.closest('.quote-line').remove();
      });
    });
  </script>
</body>
</html>
